{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build project",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "Dinero.cpp",
                "CuentaBancaria.cpp",
                "Utils.cpp",
                "Cajero.cpp",
                "-o",
                "${workspaceFolder}/cajero"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}